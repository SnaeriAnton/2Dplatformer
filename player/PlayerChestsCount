using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class PlayerChestsCount : MonoBehaviour
{
    [SerializeField] private ChestSprite _closedChest;

    private int _countChestsCollected;
    private int _countChests = 10;

    private void Update()
    {
        if (_countChestsCollected == _countChests)
        {
            Debug.Log("You are winner!");
            Time.timeScale = 0;
        }
    }

    private void OnTriggerEnter2D(Collider2D collision)
    {
        if (collision.TryGetComponent<ChestSprite>(out ChestSprite chestSprite))
        {
            if (chestSprite._closed == true)
            {
                _countChestsCollected++;
                chestSprite.CloseChest(false);
                Debug.Log(_countChestsCollected);
            }
        }
    }
}
