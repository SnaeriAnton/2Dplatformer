using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.Events;

public class CollectionChests : MonoBehaviour
{
    private Chest[] _chests;
    private int _countChestsCollected;

    private void Awake()
    {
        _chests = gameObject.GetComponentsInChildren<Chest>();
        Debug.Log($"Соберите {_chests.Length} сундуков!");

        foreach (var chest in _chests)
        {
            chest.Closed += OnChestClosed;
        }
    }

    private void OnDisable()
    {
        foreach (var chest in _chests)
        {
            chest.Closed -= OnChestClosed;
        }
    }

    private void OnChestClosed()
    {
        _countChestsCollected++;
        Debug.Log("Собрано: " + _countChestsCollected + " сундуков.");
        foreach (var chest in _chests)
        {
            if (chest.IsClosed == false)
            {
                return;
            }
        }

        Debug.Log("You are winner!");
        Time.timeScale = 0;
    }
}
