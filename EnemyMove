using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class EnemyMove : MonoBehaviour
{
    [SerializeField] private Transform _onePoint;
    [SerializeField] private Transform _twoPoint;
    [SerializeField] private GameObject _gameObject;
    [SerializeField] private float _speed;

    private int _direction = 1;
    private bool _turn = true;


    private void FixedUpdate()
    {
        _gameObject.GetComponent<Rigidbody2D>().velocity = (transform.right * _speed) * _direction;
        _gameObject.GetComponent<SpriteRenderer>().flipX = _turn;
    }

    private void OnTriggerEnter2D(Collider2D collision)
    {
        if (collision.GetComponent<Transform>().name == _twoPoint.name)
        {
            _direction = -1;
            _turn = false;
        }
        if (collision.GetComponent<Transform>().name == _onePoint.name)
        {
            _direction = 1;
            _turn = true;
        }
    }
}
